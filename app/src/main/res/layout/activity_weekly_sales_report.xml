<ScrollView xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:id="@+id/search_layout"
    android:fillViewport="true"
    android:layout_height="match_parent"
    tools:context="com.mlmishra.bhupendramishra.allelectronics.Controller_program"
    android:paddingLeft="@dimen/activity_horizontal_margin"
    android:paddingRight="@dimen/activity_horizontal_margin"
    android:paddingTop="@dimen/activity_vertical_margin"
    android:paddingBottom="8dp">

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:paddingLeft="16dp"
        android:paddingRight="16dp"
        android:paddingTop="16dp"
        android:paddingBottom="16dp"
        android:orientation="vertical"
        tools:context="com.mlmishra.bhupendramishra.allelectronics.Signup_firebase"
        android:gravity="center_horizontal">

        <TextView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:textStyle="bold"
            android:textSize="15sp"
            android:shadowDx="25"
            android:shadowDy="25"
            android:shadowRadius="50"
            android:id="@+id/dcrtv0"
            android:textColor="#00B"
            android:layout_centerHorizontal="true" />

        <ImageView
            android:layout_width="120dp"
            android:layout_height="120dp"
            android:id="@+id/suimageview"
            android:src="@drawable/ic_launcher"
            />

        <TextView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="WEEKLY SALES REPORT"
            android:textStyle="bold"
            android:textSize="15sp"
            android:shadowDx="25"
            android:shadowDy="25"
            android:shadowRadius="50"
            android:id="@+id/dcrtv2"
            android:textColor="#00B"
            android:layout_centerHorizontal="true" />

        <EditText
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:id="@+id/dcrhq"
            android:layout_marginTop="10dp"
            android:hint="EMPLOYEE HEADQUARTER"
            android:inputType="text"
            android:imeOptions="actionDone"
            android:singleLine="true"/>

        <Button
            android:id="@+id/wsrmon"
            android:layout_marginTop="10dp"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:text="Select Month"
            />

        <Button
            android:id="@+id/wsrweek"
            android:layout_marginTop="10dp"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:text="Select week"
            />



        <EditText
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:id="@+id/dcrter"
            android:layout_marginTop="10dp"
            android:hint="TERRITORY COVERED"
            android:inputType="text"
            android:imeOptions="actionDone"
            android:singleLine="true"/>


        <EditText
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:id="@+id/psr"
            android:layout_marginTop="10dp"
            android:hint="PROGEMOM SR"
            android:inputType="number"
            android:imeOptions="actionDone"
            android:singleLine="true"/>

        <EditText
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:id="@+id/mcal"
            android:layout_marginTop="10dp"
            android:hint="MOMMI CAL"
            android:inputType="number"
            android:imeOptions="actionDone"
            android:singleLine="true"/>

        <EditText
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:id="@+id/mfol"
            android:layout_marginTop="10dp"
            android:hint="MOMMI FOL"
            android:inputType="number"
            android:imeOptions="actionDone"
            android:singleLine="true"/>

        <EditText
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:id="@+id/ihb"
            android:layout_marginTop="10dp"
            android:hint="IRROW HB"
            android:inputType="number"
            android:imeOptions="actionDone"
            android:singleLine="true"/>

        <EditText
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:id="@+id/calone"
            android:layout_marginTop="10dp"
            android:hint="CALITSA ONE"
            android:inputType="number"
            android:imeOptions="actionDone"
            android:singleLine="true"/>

        <EditText
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:id="@+id/bioeli"
            android:layout_marginTop="10dp"
            android:hint="BIO ELIXSA"
            android:inputType="number"
            android:imeOptions="actionDone"
            android:singleLine="true"/>

        <EditText
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:id="@+id/ovitsa"
            android:layout_marginTop="10dp"
            android:hint="OVITSA"
            android:inputType="number"
            android:imeOptions="actionDone"
            android:singleLine="true"/>

        <EditText
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:id="@+id/comment"
            android:layout_marginTop="10dp"
            android:hint="COMMENT/REMARK"
            android:inputType="text"
            android:imeOptions="actionDone"
            android:singleLine="true"/>


        <Button
            android:id="@+id/dcrsubmit"
            android:layout_marginTop="10dp"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:text="SUBMIT"
            />


    </LinearLayout>
</ScrollView>