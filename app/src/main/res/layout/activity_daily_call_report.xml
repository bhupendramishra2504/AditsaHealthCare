<ScrollView xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:id="@+id/search_layout"
    android:fillViewport="true"
    android:layout_height="match_parent"
    tools:context="com.mlmishra.bhupendramishra.allelectronics.Controller_program"
    android:paddingLeft="@dimen/activity_horizontal_margin"
    android:paddingRight="@dimen/activity_horizontal_margin"
    android:paddingTop="@dimen/activity_vertical_margin"
    android:paddingBottom="8dp">

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:paddingLeft="16dp"
        android:paddingRight="16dp"
        android:paddingTop="16dp"
        android:paddingBottom="16dp"
        android:orientation="vertical"
        tools:context="com.mlmishra.bhupendramishra.allelectronics.Signup_firebase"
        android:gravity="center_horizontal">

        <TextView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:textStyle="bold"
            android:textSize="15sp"
            android:shadowDx="25"
            android:shadowDy="25"
            android:shadowRadius="50"
            android:id="@+id/dcrtv0"
            android:textColor="#00B"
            android:layout_centerHorizontal="true" />

        <ImageView
            android:layout_width="120dp"
            android:layout_height="120dp"
            android:id="@+id/suimageview"
            android:src="@drawable/ic_launcher"
            />

        <TextView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="DAILY CALL REPORT"
            android:textStyle="bold"
            android:textSize="15sp"
            android:shadowDx="25"
            android:shadowDy="25"
            android:shadowRadius="50"
            android:id="@+id/dcrtv2"
            android:textColor="#00B"
            android:layout_centerHorizontal="true" />

        <TextView
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:text="PREVIEW"
            android:textStyle="bold"
            android:textSize="15sp"
            android:shadowDx="25"
            android:shadowDy="25"
            android:shadowRadius="50"
            android:id="@+id/trtv1"
            android:textColor="#00B"
            android:layout_centerHorizontal="true"
            android:background="@drawable/border"
            android:padding="10dp"
           />

        <CheckBox
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:text="On LEAVE"
            android:id="@+id/dcrcb"
            android:checked="false" />





        <EditText
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:id="@+id/dcrhq"
            android:layout_marginTop="10dp"
            android:hint="EMPLOYEE HEADQUARTER"
            android:inputType="text"
            android:imeOptions="actionDone"
            android:singleLine="true"/>

        <Button
            android:id="@+id/ehq"
            android:layout_marginTop="10dp"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:text="SELECT STATION"
            />

        <EditText
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:id="@+id/dcrrd"
            android:layout_marginTop="10dp"
            android:hint="Date of Submission"
            android:focusable="false"
            android:singleLine="true"/>


        <EditText
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:id="@+id/dcrcalls"
            android:layout_marginTop="10dp"
            android:hint="Number of calls"
            android:inputType="number"
            android:imeOptions="actionDone"
            android:singleLine="true"/>

        <TextView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:textStyle="bold"
            android:textSize="15sp"
            android:text="ADD CALLS"
            android:shadowDx="25"
            android:shadowDy="25"
            android:shadowRadius="50"
            android:id="@+id/dcrtv3"
            android:textColor="#00B"
            android:layout_centerHorizontal="true" />


        <Button
            android:id="@+id/selter"
            android:layout_marginTop="10dp"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:text="SELECT TERRITORY"
            android:background="@android:drawable/btn_dropdown"
            />

        <Button
            android:id="@+id/selspeciality"
            android:layout_marginTop="10dp"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:text="SELECT SPECIALITY"
            android:background="@android:drawable/btn_dropdown"
            />

        <Button
            android:id="@+id/ffup"
            android:layout_marginTop="10dp"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:text="INTRODUCTION"
            android:background="@android:drawable/btn_dropdown"
            />


        <EditText android:id="@+id/inputSearch"
            android:layout_width="fill_parent"
            android:layout_height="wrap_content"
            android:hint="Search Dr Name...."
            android:imeOptions="actionDone"
            android:singleLine="true"
            android:inputType="textVisiblePassword"
            android:layout_marginTop="5dp"
            android:layout_marginBottom="5dp"
            android:textColor="#00B"/>

        <ListView
            android:id="@+id/list_view11"
            android:layout_width="fill_parent"
            android:layout_height="200dp"
            android:background="@drawable/border"
            android:padding="10dp"
            android:cacheColorHint="@android:color/transparent"
            android:divider="#A52A2A"
            android:dividerHeight="4px"/>

        <EditText
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:id="@+id/psr"
            android:layout_marginTop="10dp"
            android:hint="PROGEMOM SR"
            android:inputType="number"
            android:imeOptions="actionDone"
            android:singleLine="true"/>

        <EditText
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:id="@+id/mcal"
            android:layout_marginTop="10dp"
            android:hint="MOMMI CAL"
            android:inputType="number"
            android:imeOptions="actionDone"
            android:singleLine="true"/>

        <EditText
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:id="@+id/mfol"
            android:layout_marginTop="10dp"
            android:hint="MOMMI FOL"
            android:inputType="number"
            android:imeOptions="actionDone"
            android:singleLine="true"/>

        <EditText
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:id="@+id/ihb"
            android:layout_marginTop="10dp"
            android:hint="IRROW HB"
            android:inputType="number"
            android:imeOptions="actionDone"
            android:singleLine="true"/>

        <EditText
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:id="@+id/calone"
            android:layout_marginTop="10dp"
            android:hint="CALITSA ONE"
            android:inputType="number"
            android:imeOptions="actionDone"
            android:singleLine="true"/>

        <EditText
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:id="@+id/bioeli"
            android:layout_marginTop="10dp"
            android:hint="BIO ELIXSA"
            android:inputType="number"
            android:imeOptions="actionDone"
            android:singleLine="true"/>

        <EditText
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:id="@+id/ovitsa"
            android:layout_marginTop="10dp"
            android:hint="OVITSA"
            android:inputType="number"
            android:imeOptions="actionDone"
            android:singleLine="true"/>

        <EditText
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:id="@+id/comment"
            android:layout_marginTop="10dp"
            android:hint="COMMENT/REMARK"
            android:inputType="text"
            android:imeOptions="actionDone"
            android:singleLine="true"/>





        <Button
            android:id="@+id/dcrcall"
            android:layout_marginTop="10dp"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:text="ADD CALL"
            />



        <Button
            android:id="@+id/dcrsubmit"
            android:layout_marginTop="10dp"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:text="SUBMIT"
            />


    </LinearLayout>
</ScrollView>